    	<shape>
        	<stroke android:width="1dp" android:color="#ce1c10" />
        	<solid android:color="#ffffff" />
        	<corners android:radius="32dp" />
     	</shape>
	</item>
	<item android:state_focused="true">
		<shape>
        	<stroke android:width="1dp" android:color="#ce1c10" />
            <solid android:color="#ffffff" />
            <corners android:radius="32dp" />
		</shape>
 	</item>  
	<item>
